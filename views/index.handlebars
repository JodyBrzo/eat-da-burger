<div class="row">
      <div class="col-md-12 text-center">
        <h1>Eat Da Burger!</h1>
        <img 
            src="./assets/img/burger_122704.svg"
            alt="eat da burger"
            width="250px"/>
      </div>        
</div>

<div class="row">
      <div class="col-md-12 text-center">
        <h2>Add a Burger</h2>
        <form id="create-form">
            <div class="form-group">
                <label for="ba">Burger Name:</label>
                <input type="text" id="ba" name="burger_name">
                <button class="btn btn-success" type="submit">Add Burger</button>
            </div>
        </form>
      </div>        
</div>

<div class="row">
    <div class="col-md-6 text-right">
        <h2>Burgers to eat!!</h2>

        <ul class="list-group">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>        
    <div class="col-md-6 text-left">
        <h2>Burgers you've eaten!</h2>

        <ul class="list-group">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>        
</div>